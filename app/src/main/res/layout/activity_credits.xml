<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_credits"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.giacomo.venicewifi.ActivityCredits">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="CEVID - Centro Veneto di Innovazione Digitale  "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:textColor="#ff0000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp"
            android:id="@+id/textView" />

        <TextView
            android:text="per Cittadini, Imprese e Pubblica Amministrazione. "
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:id="@+id/textView2" />

        <TextView
            android:text="Università Ca' Foscari e Regione del Veneto "
            android:textColor="#ff0000"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />

        <TextView
            android:textColor="#ff0000"
            android:text="Azione 1: Open Data della Regione Veneto:  "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/textView4" />

        <TextView
            android:text="dal paradigma DaaS per la fruizione dei dati alle smart app "
            android:textColor="#ff0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/textView5" />

        <TextView
            android:text="coordinatore: prof. A.Cortesi  "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#ff0000"
            android:paddingTop="10dp"
            android:id="@+id/textView6" />

        <TextView
            android:text="app progettata e realizzata da:"
            android:layout_width="match_parent"
            android:textColor="#ff0000"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:id="@+id/textView7" />

        <TextView
            android:text="Ulliana Giacomo"
            android:textColor="#ff0000"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/textView8" />

        <TextView
            android:textColor="#ff0000"
            android:text="Zanolla Alessandro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/textView9" />
        <TextView
            android:text="Carraro Federico"
            android:layout_width="match_parent"
            android:textColor="#ff0000"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" />
        <TextView
            android:text="Pajares Mario"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="#ff0000"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" />
        <TextView
            android:text="De Matos Lourenco"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:id="@+id/textView12" />
        <TextView
            android:text="Corso di laurea in Informatica - Università Ca' Foscari"
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:textColor="#ff0000"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/textView13" />
    </LinearLayout>

</RelativeLayout>
